/* Cicero classes. */
class ClassObject(
		name: string, 
		superclass: ClassObject,  // XXX: base class has superclass == null
		/* CodeObject to evaluate after all fields are initialized */
		init: CodeObject,
		/* List of fields by name and initializer */
		classFields: Array<(string, CodeObject)>, 
		/* Note that the class methods are functions. The function
		 * contains the name of the class. When an object is created,
		 * the object is bound to this function to create the (bound)
		 * method object.
		 */
		classMethods: Array<FuncObject>) extends Object {
		// FIXME perhaps we don't specify methods as func *objects* but funcholes

	/* The name is immutable, so we get the hash value for it once so we
	 * don't have to call Strings.hash every time we want to hash the
	 * ClassObject.
	 */
	def nameH = Strings.hash(name);
	def hash() -> int {
		return nameH;
	}

	def display() -> string { return Strings.format1("<class '%s'>", name); }
	def isTrue()  -> bool   { return true; }

	/* METHODS */

	def c_superclass() -> Result {
		if (superclass == null) {
			return Result.Exn(ExnObjects.fromVirgil(Strings.format1("%s.superclass", name), "class has no superclass"));
		} else {
			return Result.OK(superclass);
		}
	}
	def c_name() -> Result {
		return Result.OK(StrObjects.getStrObject(name));
	}
	def c_display() -> Result {
		return Result.OK(StrObjects.fromString(display()));
	}
}

/* Arrays for the list of types of parameters to the method. These are
 * lazily-defined (because the class doesn't exist yet) and initialized 
 * after all the class objects are defined.
 */

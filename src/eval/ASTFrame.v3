class ASTFrame extends Frame {
	new(prev: Frame, code: CodeObject, args: Array<(string, Object)>) super(prev, code, args) {}
	
	def eval() {
		def v = evalAST(code.ast);
		if (!exn)
			val = v;
	}

	def evalCode(code: CodeObject) -> Object {
		def v = evalAST(code.ast);
		if (!exn)
			val = v;
		return v;
	}

	private def evalAST(ast: AST) -> Object {
		loc = ast.loc;
		var value: Object;

		match (ast.data) {
			Lit(val) => value = val;
			Id(id) => {
				if (locals.has(id)) {
					value = locals[id];
				} else if (globals.has(id)) {
					value = globals[id];
				} else {
					throw(StrObjects.getStrObject(Strings.format1("unbound identifier: %s", id)));
				}
			}
			Apply(tgt, args) => {
				def tgtVal = evalAST(tgt);
				if (exn) return value;
				assertType(FuncObjects.classFunc, tgtVal);
				if (exn) return value;

				// function code
				def fv = FuncObject.!(tgtVal);
				def params = fv.params, code = fv.code;

				// evaluate argument values
				var argv: Array<(string, Object)>;

				if (fv.instanceOf(MethodObjects.classMethod)) {
					argv = Array.new(args.length + 1);
					for (i < args.length) {
						def arg = evalAST(args[i]);
						if (exn) return value;
						if (i < params.length) // avoid out of bounds but don't raise exception
							argv[i + 1] = (params[i], arg);
					}
					argv[0] = ("self", MethodObject.!(fv).obj);
				} else {
					argv = Array.new(args.length);
					for (i < args.length) {
						def arg = evalAST(args[i]);
						if (exn) return value;
						if (i < params.length) // avoid out of bounds but don't raise exception
							argv[i] = (params[i], arg);
					}
				}

				// arity check
				assertArity(params.length, args);
				if (exn) return value;

				// create new frame (and evaluate)
				def frame = newFrame(code, argv);
				if (frame.exn) {
					// record stacktrace
					stacktrace.puta(frame.stacktrace.extract());
					// rethrow
					throw(frame.val);
					return value;
				}
				value = frame.val;
			}
			If(exprC, exprT, exprF) => {
				def cond = evalAST(exprC);
				if (exn) return value;

				if (cond.isTrue()) {
					def v = evalAST(exprT);
					if (exn) return value;
					value = v;
				} else {
					def v = evalAST(exprF);
					if (exn) return value;
					value = v;
				}
			}
			Raise(expr) => {
				def v = evalAST(expr);
				if (exn) return value;

				throw(v);
			}
			Catch(try, exnvar, catch) => {
				def v = evalAST(try);
				if (!exn) {
					value = v;
				} else {
					// catch exception
					exn = false;
					locals[exnvar] = val; // bind exception to variable
					def e = evalAST(catch);
					if (exn) return value;
					value = e;
				}
			}
			Func(id, params, code) => {
				def f = FuncObjects.newFO(id, params, code);
				locals[id] = f;
				value = f;
			}
			Class(id, superclass, init, fields, methods) => {
				var i: CodeObject = if(init.isJust(), init.fromJust(), null);
				var s: ClassObject;
				match (superclass) {
					Just(e) => {
						var v = evalAST(e);
						if (exn) return value;
						
						assertType(ClassObjects.classClass, v);
						if (exn) return value;
						
						s = ClassObject.!(v);
					}
					Nothing => s = Objects.classBase;
				}
				def f: Array<(string, CodeObject)> = fields;
				def m: Array<FuncObject> = Arrays.map(methods, funcToFunc);
				def c = ClassObject.new(id, s, i, f, m);
				locals[id] = c;
				value = c;
			}
			Assign(id, expr) => {
				def v = evalAST(expr);
				if (exn) return value;
				locals[id] = v;
				value = v;
			}
			Cond(cases) => {
				var sat = false;
				for (c in cases) {
					// case
					def cond = c.0, expr = c.1;

					// check cond
					def t = evalAST(cond);
					if (exn) return value;
					if (t.isTrue()) {
						def v = evalAST(expr);
						if (exn) return value;
						value = v;

						sat = true;
						break;
					}
				}

				if (!sat) {
					throw(StrObjects.getStrObject("cond error: no true branch"));
				}
			}
			While(cond, body) => {
				while (true) {
					def v = evalAST(cond);
					if (exn) return value;

					if (!v.isTrue()) {
						value = v;
						break;
					}

					evalAST(body);
					if (exn) return value;
				}
			}
			Begin(exprs) => {
				var last: Object;
				for (expr in exprs) {
					def v = evalAST(expr);
					if (exn) return value;

					last = v;
				}
				value = last;
			}
			GetField(field, expr) => {
				var obj = evalAST(expr);
				if (exn) return value;

				match (obj.getField(field)) {
					Just(v) => value = v;
				} else {
					throw(StrObjects.getStrObject(Strings.format1("name error: unknown field %s", field)));
					return value;
				}
			}
			SetField(field, expr, newCode) => {
				var obj = evalAST(expr);
				if (exn) return value;

				var val = evalAST(newCode);
				if (exn) return value;

				value = obj.fields[field];
				if (obj.fields.has(field)) {
					obj.fields[field] = val;
					value = val;
				} else {
					throw(StrObjects.getStrObject(Strings.format1("name error: unknown field %s", field)));
					return value;
				}
			}
			New(expr) => {
				var cls = evalAST(expr);
				if (exn) return value;

				assertType(ClassObjects.classClass, cls);
				if (exn) return value;

				def clsObj = ClassObject.!(cls);
				def obj = Object.new(clsObj);

				def classes: Vector<ClassObject> = Vector.new();
				for (cls = ClassObject.!(cls); cls != null; cls = cls.superclass)
					classes.put(cls);
			
				// initialization order is from base class downwards, which
				// may involve reinitializing some fields
				for (cls in classes.reverse().extract()) {
					// initialize fields
					for (field in cls.classFields) {
						def name = field.0, expr = field.1;

						// XXX hackfix
						if (expr == null) continue;
						// create new frames here!
						def frame = newFrame(expr, []);
						if (frame.exn) {
							// record stacktrace
							stacktrace.puta(frame.stacktrace.extract());
							// rethrow
							throw(frame.val);
							return value;
						}
						obj.fields[name] = frame.val;
					}
					// call initializer
					if (cls.init != null) {
						def args = [("self", obj)];
						def code = cls.init;

						// create new frames here!
						def frame = newFrame(code, args);
						if (frame.exn) {
							// record stacktrace
							stacktrace.puta(frame.stacktrace.extract());
							// rethrow
							throw(frame.val);
							return value;
						}
					} 
				}
				value = obj;
			}
			List(exprs) => {
				def vals: Vector<Object> = Vector.new();
				for (expr in exprs) {
					def v = evalAST(expr);
					if (exn) return value;

					vals.put(v);
				}
				
				def obj = ListObject.new();
				obj.list.puta(vals.extract());

				value = obj;
			}
		}

		return value;
	}
}

def funcToFunc(f: ASTData.Func) -> FuncObject {
	return FuncObjects.newFO(f.id, f.params, f.body);
}

(func (factorial n){
  (if (<= n 1) (return 1) ())
  (return (* n (factorial (- n 1))))
})
(func (fib n){
  (cond 
    ((<= n 0) (return 0))
    ((= n 1) (return 1))
    (true (return (+ (fib (- n 1)) (fib (- n 2)))))
  )
  (raise "Should never be reached")
})
(func (early_return x) {
  (if (< x 0) (return "negative") ())
  (return "non-negative")
  (return "unreachable")
})
(func (maybe_return x){
  (if (= x 0) (return "zero") ())
  ; no return here
})
(func (find_first_even nums){
  (set i 0)
  (while (< i (nums.length)){
    (set n (nums.get i))
    (if (= (n.% 2) 0) (return n) ())
    (set i (i.succ))
  })
  (return ())
})
(func (inner x) (return (* x 2)))
(func (outer x) {
  (set y (inner x))
  (return (y.+ 1))
})
(func (classify nums){
  (set i 0)
  (while (< i (nums.length)){
    (set n (nums.get i))
    (if (< n 0) (return "has negative") ())
    (if (= n 0) (return "has zero") ())

    (set i (i.succ))
  })
  (return "all positive")
})
